<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="@android:color/transparent"
    android:padding="5dp"
    android:layout_margin="5dp"

    >
    <CheckBox
        android:id="@+id/chkItemGH"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:orientation="horizontal"
        

        >

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/anh"
            android:layout_marginLeft="30dp"
            android:background="@drawable/shapemain5"

            android:src="@drawable/giayleonui" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:id="@+id/tengiay"
                android:text="Bitis Hunter Air 4"
                android:textColor="#9d6855"
                android:textSize="16sp"
                android:textStyle="bold"

                />


            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"

                android:text="Xanh đậm "
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:textAlignment="textStart"
                android:textColor="#FD979696"

                />

            <TextView
                android:id="@+id/txtSize"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:text="Size : 42 "
                android:textAlignment="textStart"
                android:textColor="#FD979696"

                />
            <TextView
                android:id="@+id/txtSoluong"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:text="Số lượng: 2"
                android:textAlignment="textStart"
                android:textColor="#FD979696"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:id="@+id/gia"
                android:layout_gravity="left"
                android:text="2.499.000VNĐ"
                android:textColor="#9d6855"
                android:textSize="16sp"

                android:textStyle="bold" />


        </LinearLayout>

        <Button

            android:id="@+id/btnXoaGioHang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:drawableBottom="@drawable/xoa"

            />


    </LinearLayout>


</LinearLayout>