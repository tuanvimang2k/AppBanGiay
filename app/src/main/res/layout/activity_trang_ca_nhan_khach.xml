<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".activity.TrangCaNhanKhach">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/man"
        android:layout_gravity="center"
        app:civ_circle_background_color="#BEFEE686"
        app:civ_border_color="#FEE686"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/txtuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên User"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:textColor="#9d6855"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thành viên Bạc"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:drawablePadding="10dp"
        android:gravity="center"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Công viên phần mềm Quang Trung"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtfacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="5"
            android:background="#F1DFBC"
            android:drawableTop="@drawable/facebook"
            android:gravity="center"
            android:iconifiedByDefault="false"
            android:text="Vào trang page FB"
            android:textColor="#9d6855"
            android:textFontWeight="@integer/material_motion_duration_medium_2"
            android:textSize="13sp"

            />

        <TextView
                 android:id="@+id/txtsodientoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="#F1D9A9"
            android:iconifiedByDefault="false"
            android:drawableTop="@drawable/baseline_local_phone_24"
            android:gravity="center"
            android:text="0900123456"
            android:textColor="#9d6855"
            android:layout_weight="5"
            android:textFontWeight="@integer/material_motion_duration_medium_2"
            android:textSize="13sp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
           android:id="@+id/txtdonhang"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            style="@style/EditText"
            android:layout_weight="5"
            android:iconifiedByDefault="false"
            android:drawableTop="@drawable/icon_donhang"
            android:gravity="center"
            android:text="Lịch Sử Đơn"
            android:textColor="#9d6855"

            android:textSize="20sp"
            android:textStyle="bold"

            />

        <TextView
          android:id="@+id/txtchatshop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            style="@style/EditText"
            android:iconifiedByDefault="false"
            android:drawableTop="@drawable/baseline_headphones_24"
            android:gravity="center"
            android:text="Chat shop"
            android:textColor="#9d6855"
            android:layout_weight="5"
            android:textSize="20sp"
            android:textStyle="bold"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:padding="5dp"
        android:orientation="horizontal">

        <TextView

            style="@style/EditText"


            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="6"
            android:id="@+id/txtgiohang"
            android:drawableTop="@drawable/baseline_logout_24"
            android:gravity="center"
            android:iconifiedByDefault="false"
            android:text="Đăng xuất"
            android:textColor="#9d6855"


            android:textSize="20sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/txtdoimatkhaune"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            style="@style/EditText"
            android:iconifiedByDefault="false"
            android:gravity="center"
            android:text="Đổi mật khẩu"

            android:layout_weight="4"
            android:textColor="#9d6855"

            android:textSize="20sp"
            android:textStyle="bold"

            />


    </LinearLayout>

    <Button
       android:id="@+id/btnvetrangchu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Về trang chính"
        android:textSize="15sp"

        android:textColor="#9d6855"
        android:backgroundTint="@android:color/transparent"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FiveSole 12.4.2023"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="45dp"
        android:textStyle="bold"/>



</LinearLayout>