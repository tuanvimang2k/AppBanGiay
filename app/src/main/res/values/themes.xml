<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <!--        //<item name="android:background">#DD111111</item>-->
        <item name="android:gravity">center</item>
    </style>
    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">@drawable/gradient</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">#9d6855</item>
    </style>
    <style name="EditText">
        <item name="android:background">@drawable/gradient_edittext</item>
    </style>

    <style name="ImageView">
        <item name="android:background">@drawable/gradient_edittext</item>
    </style>

    <style name="BottomNavi">
        <item name="android:backgroundTint">#B7F4E08C</item>
    </style>





</resources>